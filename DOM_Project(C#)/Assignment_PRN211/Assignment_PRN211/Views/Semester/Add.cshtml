@model Assignment_PRN211.Models.Semester

@{
    ViewData["Title"] = "Semester";
}

<h1>Add</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p style="color: red">@ViewBag.error</p>
            <div class="form-group">
                <label asp-for="SemesterId" class="control-label"></label>
                <input asp-for="SemesterId" class="form-control" required/>
                <span asp-validation-for="SemesterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SemesterName" class="control-label"></label>
                <input asp-for="SemesterName" class="form-control" required />
                <span asp-validation-for="SemesterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" type="datetime-local" min="01-01-2010" max="31-12-2040" required/>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" type="datetime-local" min="01-01-2010" max="31-12-2040" required/>
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Semester" asp-action="Index">Back to List</a>
</div>

