@inject IHttpContextAccessor context;
@using Newtonsoft.Json;
@using Assignment_PRN211.Models;
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FDom</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
    <!-- Nucleo Icons -->
    <link href="~/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="~/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
    <!-- CSS Files -->
    <link id="pagestyle" href="~/assets/css/material-dashboard.css?v=3.1.0" rel="stylesheet" />
    <!-- Nepcha Analytics (nepcha.com) -->
    <!-- Nepcha is a easy-to-use web analytics. No cookies and fully compliant with GDPR, CCPA and PECR. -->
    <script defer data-site="YOUR_DOMAIN_HERE" src="https://api.nepcha.com/js/nepcha-analytics.js"></script>
    @if(context.HttpContext.Session.GetString("user") != null){
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3" id="sidenav-main" style="background-color: gold">
        <div class="sidenav-header">
            <i class="fas fa-times p-3 cursor-pointer text-white opacity-5 position-absolute end-0 top-0 d-none d-xl-none" aria-hidden="true" id="iconSidenav"></i>
        <a class="navbar-brand m-0" asp-controller="Home" asp-action="Index" target="_blank">
                <img src="~/assets/img/logo-ct.png" class="navbar-brand-img h-100" alt="main_logo">
                <span class="ms-1 font-weight-bold text-white">Account Dashboard</span>
            </a>
        </div>
        <hr class="horizontal light mt-0 mb-2">
        <div class="collapse navbar-collapse  w-auto " id="sidenav-collapse-main">
            <ul class="navbar-nav">
            @if(context.HttpContext.Session.GetString("user") != null && JsonConvert.DeserializeObject<User>(context.HttpContext.Session.GetString("user")).IsAdmin == false) {
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Account" asp-action="History">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">table_view</i>
                        </div>
                    @if (ViewBag.Cur == "History")
                    {
                        <span class="nav-link-text ms-1 font-weight-bold">Lịch sử phòng ở</span>
                    } else
                    {
                        <span class="nav-link-text ms-1">Lịch sử phòng ở</span>
                    }
                </a>
            </li>
                <li class="nav-item">
                <a class="nav-link text-white " asp-controller="Account" asp-action="Money">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">receipt_long</i>
                        </div>
                    @if (ViewBag.Cur == "Money")
                    {
                        <span class="nav-link-text ms-1 font-weight-bold">Nạp tiền</span>
                    }
                    else
                    {
                        <span class="nav-link-text ms-1">Nạp tiền</span>
                    }
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white " asp-controller="Booking" asp-action="Index">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">view_in_ar</i>
                        </div>
                        <span class="nav-link-text ms-1">Đăng kí phòng ở</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Booking" asp-action="ChangeRoom">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">table_view</i>
                        </div>
                        @if (ViewBag.Cur == "ChangeRoom")
                        {
                            <span class="nav-link-text ms-1 font-weight-bold">Yêu cầu đổi chéo phòng</span>
                        }
                        else
                        {
                            <span class="nav-link-text ms-1">Yêu cầu đổi chéo phòng</span>
                        }
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Account" asp-action="List">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">table_view</i>
                        </div>
                        @if (ViewBag.Cur == "List")
                        {
                            <span class="nav-link-text ms-1 font-weight-bold">Danh sách tài khoản</span>
                        }
                        else
                        {
                            <span class="nav-link-text ms-1">Danh sách tài khoản</span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Booking" asp-action="Request">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">table_view</i>
                        </div>
                        @if (ViewBag.Cur == "Booking_Admin")
                        {
                            <span class="nav-link-text ms-1 font-weight-bold">Xử lí đơn đặt phòng</span>
                        }
                        else
                        {
                            <span class="nav-link-text ms-1">Xử lí đơn đặt phòng</span>
                        }
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Semester" asp-action="Index">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">table_view</i>
                        </div>
                        @if (ViewBag.Cur == "Semester")
                        {
                            <span class="nav-link-text ms-1 font-weight-bold">Quản lí học kì</span>
                        }
                        else
                        {
                            <span class="nav-link-text ms-1">Quản lí học kì</span>
                        }
                    </a>
                </li>
            }
                <li class="nav-item mt-3">
                    <h6 class="ps-4 ms-2 text-uppercase text-xs text-white font-weight-bolder opacity-8">Tài khoản cá nhân</h6>
                </li>
                <li class="nav-item">
                <a class="nav-link text-white " asp-controller="Account" asp-action="Index">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">person</i>
                        </div>

                    @if (ViewBag.Cur == "Profile")
                    {
                        <span class="nav-link-text ms-1 font-weight-bold">Profile</span>
                    }
                    else
                    {
                        <span class="nav-link-text ms-1">Profile</span>
                    }
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white " asp-controller="Account" asp-action="ChangePass">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">password</i>
                        </div>
                    @if (ViewBag.Cur == "Password")
                    {
                        <span class="nav-link-text ms-1 font-weight-bold">Đổi mật khẩu</span>
                    }
                    else
                    {
                        <span class="nav-link-text ms-1">Đổi mật khẩu</span>
                    }
                    </a>
                </li>
            <li class="nav-item">
                <a class="nav-link text-white " asp-controller="Home" asp-action="Index">

                    <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                        <i class="material-icons opacity-10">home</i>
                    </div>
                    @if (ViewBag.Current == "Home")
                    {
                        <span class="nav-link-text ms-1 font-weight-bold">Quay về trang chủ</span>
                    }
                    else
                    {
                        <span class="nav-link-text ms-1">Quay về trang chủ</span>
                    }
                </a>
            </li>
                <li class="nav-item">
                    <a class="nav-link text-white " asp-controller="UserAccess" asp-action="Logout">

                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="material-icons opacity-10">logout</i>
                        </div>

                        <span class="nav-link-text ms-1">Đăng xuất</span>
                    </a>
                </li>
        </ul>
        </div>
    </aside>
    }
<main class="main-content border-radius-lg ">
    @RenderBody()
    <footer class="footer py-4  ">
        <div class="container-fluid">
            <div class="row align-items-center justify-content-lg-between">
                <div class="col-lg-12 mb-lg-0 mb-4">
                    <div class="copyright text-center text-sm text-muted text-lg-start">
                        © <script>
                              document.write(new Date().getFullYear())
                        </script>,
                        made with <i class="fa fa-heart"></i> by
                        <a href="https://www.creative-tim.com" class="font-weight-bold" target="_blank">Creative Tim</a>
                        for a better web.
                    </div>
                </div>
            </div>
        </div>
    </footer>
</main>


