@model Assignment_PRN211.Models.Dormitory

@{
    ViewData["Title"] = "Dom";
}

<h3 class="mb-30 title_color">Chỉnh sửa Tòa kí túc xá</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p style="color: red">@ViewBag.error</p>
            <div class="form-group">
                ID Tòa
                <input type="text" asp-for="DomId" class="form-control" readonly />
            </div>
            <div class="form-group">
                Tên Tòa
                <input asp-for="DomName" class="form-control" required/>
                <span asp-validation-for="DomName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn theme_btn button_hover">Chỉnh sửa</button> |
                <a asp-controller="Dom" asp-action="Index" class="btn theme_btn button_hover">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
