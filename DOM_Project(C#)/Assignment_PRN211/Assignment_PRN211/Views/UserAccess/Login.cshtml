<body style="background-color: #FFD700;">

	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<form asp-action="Login" asp-controller="UserAccess" class="login100-form validate-form">
					<span class="login100-form-title p-b-43">
						Đăng nhập để tiếp tục
					</span>

					<p class="text-center p-t-46 p-b-20" style="color: red">@ViewBag.error</p>

					ID người dùng:
					<div class="wrap-input100 validate-input">
						<input class="input100" type="text" name="userid" value="@ViewBag.userid">
					</div>

					Mật khẩu:
					<div class="wrap-input100 validate-input">
						<input class="input100" type="password" name="password" value="@ViewBag.password">
					</div>

					<div class="flex-sb-m w-full p-t-3 p-b-32">

						<div>
							<a href="#" class="txt1">
								Quên mật khẩu?
							</a>
						</div>
					</div>


					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Đăng nhập
						</button>
					</div>

					<div class="text-center p-t-46 p-b-20">
						<span class="txt2">
							hoặc đăng nhập sử dụng
						</span>
					</div>

					<div class="login100-form-social flex-c-m">
						<a href="#" class="login100-form-social-item flex-c-m bg1 m-r-5">
							<i class="fa fa-facebook-f" aria-hidden="true"></i>
						</a>

						<a href="#" class="login100-form-social-item flex-c-m bg2 m-r-5">
							<i class="fa fa-google" aria-hidden="true"></i>
						</a>
					</div>


					<div>
						<p class="text-center p-t-46 p-b-20">
							Không có tài khoản? <a asp-controller="UserAccess" asp-action="Register">Đăng kí</a>
						</p>
					</div>
				</form>

				<div class="login100-more" style="background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');">
				</div>
			</div>
		</div>
	</div>
</body>